{% extends 'base.html.twig' %}

{% block title %}Coupe index{% endblock %}

{% block body %}
    <h1>Coupe index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Prix</th>
                <th>Duree</th>
                <th>Description</th>
                <th>Img</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for coupe in coupes %}
            <tr>
                <td>{{ coupe.id }}</td>
                <td>{{ coupe.nom }}</td>
                <td>{{ coupe.prix }}</td>
                <td>{{ coupe.duree }}</td>
                <td>{{ coupe.description }}</td>
                <td>{{ coupe.img }}</td>
                <td>
                    <a href="{{ path('coupe_show', {'id': coupe.id}) }}">show</a>
                    <a href="{{ path('coupe_edit', {'id': coupe.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('coupe_new') }}">Create new</a>
{% endblock %}
