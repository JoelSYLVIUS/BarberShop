{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
    <div class="container margtop">
        <form method="post">
            {% if error %}
                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}

            <h1 class="h3 center mb-3 font-weight-normal">Identifie toi pour réserver ta coupe !</h1>
            <div class="row">
                <div class="input-field col s6 offset-s3">
                    <label for="inputUsername" class="sr-only">Username</label>
                    <input type="text" value="{{ last_username }}" name="username" id="inputUsername" class="form-control" placeholder="Username"  required autofocus> <!-- value="{#{ error.token.user }#}" -->
                </div>
            </div>
            <div class="row">
                <div class="input-field col s6 offset-s3">
                    <label for="inputPassword" class="sr-only">Password</label>
                    <input type="password" name="password" id="inputPassword" class="form-control" placeholder="Password" required>
                </div>
            </div>

            <input type="hidden" name="_csrf_token"
                   value="{{ csrf_token('authenticate') }}"
            >

            {#
                Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                See https://symfony.com/doc/current/security/remember_me.html

                <div class="checkbox mb-3">
                    <label>
                        <input type="checkbox" name="_remember_me"> Remember me
                    </label>
                </div>
            #}
            <div class="row">
                <div class="input-field col s6 offset-s3 center">
                    <button class="btn btn-lg btn-primary black gold" type="submit">
                        Connexion
                    </button>
                </div>
            </div>
            <p>Vous n'avez pas encore de compte ? <a href="/register">Je crée mon compte!</a></p>
        </form>
    </div>
{% endblock %}
